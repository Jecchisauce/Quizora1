<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout 
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Phase1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="139dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Phase 3 of 3" />

        <ImageView
            android:layout_width="326dp"
            android:layout_height="421dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="-79dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cha_rac" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="241dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="Let's get Started"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="216dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Wonderful!"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="294dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-2dp"
            android:layout_marginBottom="-26dp"
            android:background="@drawable/border">

            <Button
                android:id="@+id/signbtn"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="146dp"
                android:background="@drawable/button"
                android:text="Register"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="171dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Already have an Account? "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="244dp"
                android:layout_marginTop="171dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:text="Login here"
                android:textAllCaps="false"
                android:textColor="#C97D8E"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="By signing up you have agreed Terms and conditions and Privacy policy."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </RelativeLayout>

    </RelativeLayout>
</layout>
