<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/b_g"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="402dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/sign_border">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140.13dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/sp_lash" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="139dp"
            android:fontFamily="@font/poppins_medium"
            android:text="ACCOUNT RECOVERY"
            android:textColor="#AF258F"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/Password1"
            android:layout_width="267dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="89dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="#959595" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="193dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Password must be different from your old password"
            android:textColor="@color/white"
            android:textSize="9dp" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="267dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="151dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="#959595" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="129dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Must be 6 Characters"
            android:textColor="@color/white"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="71dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Both passwords must Match"
            android:textColor="@color/white"
            android:textSize="9dp" />

        <Button
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="266dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/border"
            android:fontFamily="@font/poppins_medium"
            android:text="Change Password"
            android:textColor="#C97D8E" />

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/baseline_arrow_back_24" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="147dp"
        android:layout_height="149dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/lo_go" />


</RelativeLayout>