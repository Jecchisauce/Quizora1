<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF"/> <!-- Change color if needed -->

    <!-- Corner Radius -->
    <corners android:radius="10dp"/> <!-- Adjust the rounding -->

    <!-- Border (optional) -->
    <stroke android:width="1dp" android:color="#C97D8E"/>

    <!-- Padding fix -->
    <padding android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
